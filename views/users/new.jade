extends ../layout

block content
  
  h1 New User
  
  - if (error)
    .alert.alert-danger Please verify the errors above
  
  form(action='/users' method='post' role='form')
    .form-group(class= error && error.errors.topic ? 'has-error' : '' )
      input(type='text' name='user[username]' class='form-control' placeholder='* Username')
      - if(error && error.errors.username)
        .help-block= error.errors.username.message
      
    .form-group(class= error && error.errors.summary ? 'has-error' : '' )
      textarea(type='password' name='user[password]' class='form-control' placeholder='* Password')
      - if(error && error.errors.password)
        .help-block= error.errors.password.message
        
    .form-group(class= error && error.errors.name ? 'has-error' : '' )
      input(type='text' name='user[passwordConfirmation]' class='form-control' placeholder='* Confirmation')
      - if(error && error.errors.passwordConfirmation)
        .help-block= error.errors.passwordConfirmation.message
      
    .form-group
      button(type='submit' class='btn btn-primary') Submit